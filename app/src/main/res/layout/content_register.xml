<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="joslabs.a4gcapitalapp.reglogin.Register"
    tools:showIn="@layout/activity_register">


    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/map"
        android:id="@+id/layerbottom"
        android:visibility="gone"
        android:layout_margin="@dimen/card_elevation">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select"
            android:layout_margin="@dimen/card_elevation"
            android:background="@drawable/roundbuttons"
            android:id="@+id/btnselect"
            android:layout_weight="0.5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btncancel"
            android:clickable="true"
            android:contextClickable="true"
            android:layout_margin="@dimen/card_elevation"
            android:background="@drawable/roundbuttons"
            android:layout_weight="0.5"/>
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayer"
    android:layout_below="@id/layerbottom"
   >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtreg"
        android:text="Register here"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"

        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:gravity="center_vertical"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:animateLayoutChanges="true"
        android:layout_below="@id/txtreg"
        android:id="@+id/edtlayername">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtname"
            android:hint="Enter your name"

            android:cursorVisible="true"
            android:textCursorDrawable="@color/colorPrimary"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:animateLayoutChanges="true"
        android:layout_below="@id/edtlayername"
        android:id="@+id/edtlayerid">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtidno"
            android:inputType="phone"
            android:hint="your idno"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/colorPrimary"
            />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/edtlayerid"
        android:text="@string/addstation"
        android:layout_marginTop="@dimen/spinner_margin"
        android:id="@+id/addsttion"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spn"
        android:layout_toRightOf="@id/addsttion"
        android:layout_marginTop="@dimen/spinner_margin"
        android:layout_below="@id/edtlayerid"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Date Of B"
        android:layout_below="@id/spn"
        android:layout_marginTop="@dimen/spinner_margin"
        android:id="@+id/btndatepick"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDob"
        android:layout_marginTop="@dimen/spinner_margin"
        android:textColor="@color/green"
        android:text="not set"
        android:layout_toRightOf="@id/btndatepick"
        android:layout_below="@id/spn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnlocation"
        android:layout_below="@id/btndatepick"
        android:text="Location"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtlocation"
        android:textColor="@color/green"
        android:layout_toRightOf="@id/btnlocation"
        android:layout_below="@id/btndatepick"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="@dimen/Profile_size"
    android:layout_centerVertical="true"
    android:text="@string/addidpic"
    android:layout_below="@id/btnlocation"
    android:gravity="center_vertical"
    android:id="@+id/txtaddidpic"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/Profile_size"
        android:layout_height="@dimen/Profile_size"
        android:id="@+id/imgidno"
        android:layout_below="@id/btnlocation"
        android:src="@mipmap/add_idpic"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
        android:layout_toRightOf="@id/txtaddidpic"
       />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/Profile_size"
        android:layout_height="@dimen/Profile_size"
        android:id="@+id/imgprofile"
        android:layout_below="@id/btnlocation"
        android:src="@mipmap/add_idpic"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
       android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/Profile_size"
        android:layout_centerVertical="true"
        android:text="@string/addprofilepic"
        android:layout_below="@id/btnlocation"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/imgprofile"
        android:id="@+id/txtaddprofile"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/roundbuttons"
        android:layout_below="@id/imgidno"
        android:text="Register"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"
        android:textSize="14sp"

        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:id="@+id/btnreg"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />
</RelativeLayout>
</RelativeLayout>
